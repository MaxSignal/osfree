# ------------------------
# Build management targets
# ------------------------

clean:  prep
	-del /N *.obj 2> nul
	(cd $(IJG)     && nmake -c -f makeijg.vac  clean)
	(cd $(ZLIB)    && nmake -c -f makezlib.vac clean)
	(cd $(LIBPNG)  && nmake -c -f makepng.vac  clean)
	(cd $(LIBTIFF) && nmake -c -f maketif.vac  clean)

clobber: prep
	 -del /N *.obj *.exe *.lib *.dll $(IDIR)\* 2> nul
	 (cd $(IJG)      && nmake -c -f makeijg.vac  clobber && del /N makeijg.vac)
	 (cd $(ZLIB)     && nmake -c -f makezlib.vac clobber && del /N makezlib.vac)
	 (cd $(LIBPNG)   && nmake -c -f makepng.vac  clobber && del /N makepng.vac)
	 (cd $(LIBTIFF)  && nmake -c -f maketif.vac  clobber && del /N maketif.vac)

#

install:
         copy gbm.h      $(IDIR)
         copy gbmerr.h   $(IDIR)
         copy gbmhist.h  $(IDIR)
         copy gbmht.h    $(IDIR)
         copy gbmmcut.h  $(IDIR)
         copy gbmmir.h   $(IDIR)
         copy gbmrect.h  $(IDIR)
         copy gbmscale.h $(IDIR)
         copy gbmtrunc.h $(IDIR)
         copy gbmtool.h  $(IDIR)
         copy gbmmem.h   $(IDIR)
         copy *.lib      $(IDIR)
         copy *.exe      $(IDIR)
         copy *.dll      $(IDIR)
         copy $(DOCDIR)\readme_gbmos2.txt $(IDIR)

#

exepack:
         $(DLL_PACKER) *.dll
         $(EXE_PACKER) *.exe

#

package:
        -del /N $(IDIR)\gbmos2.zip 2> nul
        zip $(IDIR)\gbmos2.zip *.exe *.dll *.lib gbm.h gbmerr.h gbmhist.h  \
                               gbmht.h gbmmcut.h gbmmir.h gbmrect.h  \
                               gbmscale.h gbmtrunc.h gbmtool.h gbmmem.h \
                               $(DOCDIR)\readme_gbmos2.txt

