#
# Generalised Bitmap Module
#
# This makefile is for IBM VisualAge C++ with FP8 on OS/2.
#
# Builds GBM.DLL which is compiled multithreaded
# Therefore all users should also be multithreaded
#
# Note problems have been observed when optimisation allows the instruction
# scheduler to do its thing. Bug present beleived present in IBM C-Set++, with
# CSD 12, and in particular affects inner loops in gbmht.c and gbmerr.c.
# Bug suspected also present in VisualAge C++, even with CTC308.
#

# include configuration setting for nmake (except compiler options)
!INCLUDE ..\nmake.opt

# Modify this line to point to the Independant JPEG groups library 6a/6b
# If you haven't got it, comment out the line instead.
# (Keep the current makefile !)
IJG    = libjpeg

# Modify these 2 lines to point to the libpng library 1.2.25 or higher
# and the zlib 1.2.3 or higher.
# If you haven't got them, comment out the lines instead.
ZLIB   = zlib
LIBPNG = libpng

# Modify this line to point to the libtiff library 3.8.2
# If you haven't got it, comment out the line instead.
LIBTIFF = libtiff

# Documentation directory
DOCDIR = doc

# Installation directory: gbm.dll, gbm.lib and gbm.h files are copied to this directory
IDIR =  bin

# -------------------
# Configure lib usage
# -------------------

CJPEG    = /DENABLE_IJG
LIB_IJG  = $(IJG)\jpeg.lib

# ZLIB is required for LIBPNG
CPNG     = /DENABLE_PNG
LIB_ZLIB = $(ZLIB)\z.lib
LIB_PNG  = $(LIBPNG)\png.lib

# ZLIB and IJG are required for LIBTIFF
CTIFF    = /DENABLE_TIF
LIB_TIFF = $(LIBTIFF)\tiff.lib

# ------------------
# Configure compiler
# ------------------

#
# IBM Visual Age C++:
#
CWARNS         = /W3 /Wcnd+cns+dcl+ord+par+pro+rea+ret+use+
CFLAGS         = /C+ $(CWARNS) /DOS2 /G5 /Gd-m+ /Q+ /O+ /Os- /Gf+ /DNDEBUG
CFLAGS_DBG     = /C+ $(CWARNS) /DOS2 /G5 /Gd-m+ /Q+ /Gf+ /Ti+ /Tm+ /DDEBUG
CFLAGS_EXE     = $(CFLAGS) /Ge+
CFLAGS_EXE_DBG = $(CFLAGS_DBG) /Ge+
CFLAGS_DLL     = /Ge- $(CFLAGS) $(CJPEG) $(CPNG) $(CTIFF)
CFLAGS_DLL_DBG = /Ge- $(CFLAGS_DBG) $(CJPEG) $(CPNG) $(CTIFF)

LFLAGS         = /NOI /ALIGN:4 /NOLOGO /EXEPACK:2 /OPTFUNC /PACKCODE /PACKDATA
LFLAGS_DBG     = /NOI /ALIGN:4 /NOLOGO /DEBUG /DBGPACK
LFLAGS_EXE     = $(LFLAGS) /BASE:0x10000 /STACK:0x6000 /PMTYPE:VIO
LFLAGS_EXE_DBG = $(LFLAGS_DBG) /BASE:0x10000 /STACK:0x6000 /PMTYPE:VIO
LFLAGS_DLL     = $(LFLAGS) /NOE /DLL
LFLAGS_DLL_DBG = $(LFLAGS_DBG) /NOE /DLL

# For debugging call nmake or wmake with debug=on
!ifdef debug
CFLAGS_EXE     = $(CFLAGS_EXE_DBG)
CFLAGS_DLL     = $(CFLAGS_DLL_DBG)
LFLAGS_EXE     = $(LFLAGS_EXE_DBG)
LFLAGS_DLL     = $(LFLAGS_DLL_DBG)
!endif

.SUFFIXES:	.c .obj

.c.obj:
		icc $(CFLAGS_EXE) $*.c

#


all:    prep ijg png tiff \
        gbmdllout \
        gbm.dll gbm.lib gbmmem.lib \
        gbmtoolsout \
        gbmhdr.exe \
        gbmmir.lib gbmref.exe \
        gbmrect.lib gbmsub.exe \
        gbmscale.lib gbmsize.exe \
        gbmerr.lib gbmtrunc.lib gbmht.lib gbmhist.lib gbmmcut.lib gbmbpp.exe \
        gbmcpal.exe  \
        gbmgamma.exe \
        gbmconv.exe \
        gbmver.exe

#

prep:
   @echo -----------------------------
   @echo JPEG support, via IJG library
   @echo -----------------------------
   @copy $(IJG)\jconfig.doc $(IJG)\jconfig.h
   @copy makeijg.vac $(IJG)
   @copy jmorecfg.h $(IJG)
   @echo --------------------------------
   @echo PNG support, via LIBPNG and ZLIB
   @echo --------------------------------
   @copy makezlib.vac $(ZLIB)
   @copy makepng.vac  $(LIBPNG)
   @echo ---------------------------------------
   @echo TIFF support, via LIBTIFF, IJG and ZLIB
   @echo ---------------------------------------
   @copy maketif.vac $(LIBTIFF)
   @echo.

ijg:
   @echo ---------------------
   @echo Compiling IJG library
   @echo ---------------------
!ifdef debug
   (cd $(IJG) && nmake -c -f makeijg.vac debug=yes)
!else
   (cd $(IJG) && nmake -c -f makeijg.vac)
!endif
   @echo.

#

png:
   @echo ----------------------
   @echo Compiling ZLIB library
   @echo ----------------------
!ifdef debug
   (cd $(ZLIB)   && nmake -c -f makezlib.vac debug=yes)
!else
   (cd $(ZLIB)   && nmake -c -f makezlib.vac)
!endif
   @echo.
   @echo ------------------------
   @echo Compiling LIBPNG library
   @echo ------------------------
!ifdef debug
   (cd $(LIBPNG) && nmake -c -f makepng.vac debug=yes)
!else
   (cd $(LIBPNG) && nmake -c -f makepng.vac)
!endif
   @echo.

#

tiff:
   @echo -------------------------
   @echo Compiling LIBTIFF library
   @echo -------------------------
!ifdef debug
   (cd $(LIBTIFF) && nmake -c -f maketif.vac debug=yes)
!else
   (cd $(LIBTIFF) && nmake -c -f maketif.vac)
!endif
   @echo.

#

gbmdllout:
   @echo ---------------------
   @echo Compiling GBM library
   @echo ---------------------

gbmtoolsout:
   @echo -------------------
   @echo Compiling GBM tools
   @echo -------------------

#

gbm.dll:  gbm.obj    gbmpbm.obj  gbmpgm.obj gbmppm.obj gbmpnm.obj  \
          gbmbmp.obj gbmtga.obj  gbmkps.obj gbmiax.obj gbmpcx.obj  \
          gbmtif.obj gbmlbm.obj  gbmvid.obj gbmgif.obj gbmxbm.obj  \
          gbmspr.obj gbmpsg.obj  gbmgem.obj gbmcvp.obj gbmjpg.obj  \
          gbmpng.obj gbmxpm.obj  gbmxpmcn.obj gbmhelp.obj gbmmap.obj gbmmem.obj \
          gbm.def
          ilink $(LFLAGS_DLL) /OUT:$@ @<<
                $** $(LIB_IJG) $(LIB_ZLIB) $(LIB_PNG) $(LIB_TIFF)
<<


gbm.lib:  gbm.def
          implib /NOLOGO /NOI $@ $**

gbm.obj:  gbm.c gbm.h gbmhelp.h gbmdesc.h gbmmem.h gbmpbm.h gbmpgm.h gbmpnm.h gbmppm.h gbmbmp.h gbmtga.h gbmkps.h gbmiax.h gbmpcx.h gbmtif.h gbmlbm.h gbmvid.h gbmgif.h gbmxbm.h gbmspr.h gbmpsg.h gbmgem.h gbmcvp.h gbmjpg.h gbmpng.h gbmxpm.h gbmxpmcn.h
          icc $(CFLAGS_DLL) $*.c

