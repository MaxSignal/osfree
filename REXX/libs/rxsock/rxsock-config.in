#! /bin/sh
#
# The idea to this kind of setup info script was stolen from numerous
# other packages, such as neon, libxml and gnome.
#
# $Id: rxsock-config.in,v 1.1 2002/11/30 02:01:49 mark Exp $
#
prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

usage()
{
   echo "Usage: rxsock-config [OPTION]"
   echo ""
   echo "Available values for OPTION include:"
   echo ""
   echo "  --help      display this help and exit"
   echo "  --libs      library linking information"
   echo "              [$prefix/lib/@LIBPRE@rxsock@LIBPST@ @REXX_LIBS@ @MH_EXTRA_LIBS@ -lc]"
   echo "  --prefix    RxSock install prefix"
   echo "              [$prefix]"
   echo "  --version   output version information"
   echo "              [@VER_DOT@]"
   echo "  --verdate   output the version date"
   echo "              [@VER_DATE@]"
   exit $1
}

if test $# -eq 0; then
   usage 1
fi

while test $# -gt 0; do
   case "$1" in
   # this deals with options in the style
   # --option=value and extracts the value part
   # [not currently used]
      -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
      *) value= ;;
   esac

   case "$1" in
      --prefix)
         echo $prefix
         ;;

      --version)
         echo @VER_DOT@
         ;;

      --verdate)
         echo @VER_DATE@
         ;;

      --help)
         usage 0
         ;;

      --libs)
         echo $prefix/lib/@LIBPRE@rxsock@LIBPST@ @REXX_LIBS@ @MH_EXTRA_LIBS@ -lc
         ;;

      *)
         usage
         exit 1
         ;;
   esac
   shift
done

exit 0
